<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="630dp"
    android:columnCount="4"
    android:rowCount="6"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/numtext"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:textSize="90dp"
        android:text="0"
        android:gravity="right"/>

    <Button
        android:id="@+id/buttonNumAC"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:text="AC"
        android:textSize="30dp"
        android:background="@color/LightGrey"


        />

    <Button
        android:id="@+id/buttonNum加减"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:text="+/-"
        android:textSize="30dp"
        android:background="@color/LightGrey"
        />

    <Button
        android:id="@+id/buttonNum百分号"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:text="%"
        android:textSize="30dp"
        android:background="@color/LightGrey"
        />

    <Button
        android:id="@+id/buttonNum除"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:background="@color/orgin"
        android:text="÷"
        android:textSize="30dp"
        android:textColor="@color/White"/>
    />

    <Button
        android:id="@+id/buttonNum7"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:background="@color/WhiteSmoke"
        android:text="7"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buttonNum8"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:text="8"
        android:textSize="30dp"
        android:background="@color/WhiteSmoke"/>

    <Button
        android:id="@+id/buttonNum9"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:text="9"
        android:textSize="30dp"
        android:background="@color/WhiteSmoke"/>

    <Button
        android:id="@+id/buttonNumx"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:background="@color/orgin"
        android:text="×"
        android:textSize="30dp"
        android:textColor="@color/White"/>
    />

    <Button
        android:id="@+id/buttonNum4"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:text="4"
        android:textSize="30dp"
        android:background="@color/WhiteSmoke"/>

    <Button
        android:id="@+id/buttonNum5"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:text="5"
        android:textSize="30dp"
        android:background="@color/WhiteSmoke"/>

    <Button
        android:id="@+id/buttonNum6"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:text="6"
        android:textSize="30dp"
        android:background="@color/WhiteSmoke"/>

    <Button
        android:id="@+id/buttonNum减"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:background="@color/orgin"
        android:text="—"
        android:textSize="30dp"
        android:textColor="@color/White"/>
    />

    <Button
        android:id="@+id/buttonNum1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:text="1"
        android:textSize="30dp"
        android:background="@color/WhiteSmoke"/>

    <Button
        android:id="@+id/buttonNum2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:text="2"
        android:textSize="30dp"
        android:background="@color/WhiteSmoke"/>

    <Button
        android:id="@+id/buttonNum3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:text="3"
        android:textSize="30dp"
        android:background="@color/WhiteSmoke"/>

    <Button
        android:id="@+id/buttonNumplus"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:background="@color/orgin"
        android:text="+"
        android:textSize="30dp"
        android:textColor="@color/White"/>
    />

    <Button
        android:id="@+id/buttonNum0"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:text="0"
        android:textSize="30dp"
        android:background="@color/WhiteSmoke"/>

    <Button
        android:id="@+id/buttonNumPoint"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:text="."
        android:textSize="30dp"
        android:background="@color/WhiteSmoke"/>

    <Button
        android:id="@+id/buttonNumEqual"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:background="@color/orgin"
        android:text="="
        android:textSize="30dp"
        android:textColor="@color/White"/>
    //juhuang


</GridLayout>

